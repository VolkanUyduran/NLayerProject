@model  IEnumerable<CategoryDto>
@{
    ViewData["Titile"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary mb-4" asp-action="Create">Kategori Ekle</a>
<table class="table table-bordered" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <button class="btn btn-outline-warning" asp-action="Update" asp-route-id="@item.Id">Güncelle</button>
                    <button class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</button>
                </td>
            </tr>
        </tbody>
    }
</table>